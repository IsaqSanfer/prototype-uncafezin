@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bem vindo, @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark fw-bold">Sair</button>
        </form>
    </li>
}
else
{    
    <li class="nav-item mx-2">
        <a class="nav-link btn btn-sm btn-warning text-dark fw-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item mx-2">
        <a class="nav-link btn btn-sm btn-warning text-dark fw-bold" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
    </li>

}
</ul>

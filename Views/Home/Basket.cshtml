@{
    ViewData["Title"] = "Carrinho";
}

<nav aria-label="breadcrumb mt-5">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dept">Produtos</a></li>
        <li class="breadcrumb-item active"><a class="nav-link text-dark fw-bold" asp-controller="Home" asp-action="Basket" aria-current="page">@ViewData["Title"]</a></li>
    </ol>
</nav>

<div class="py-5 text-center">
    <img class="d-block rounded-1 mx-auto mb-4" src="https://www.starbucks.com.br/public/img/rewards/icon-app-2.png" alt="" width="86" height="70">

    <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
    <p class="lead">Aqui está a lista com as informações dos produtos adicionados ao seu carrinho.</p>
    <hr>
</div>

<div class="container col-8">

    <div class="row">
        <div class="col-md-12 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-4">
                <span class="text-muted">Seu carrinho</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div class="w-25">
                        <img class="img-fluid" src="~/itens/large_001.jpg" alt="Imagem de capa do card" style="height:130px;">
                    </div>
                    <div class="w-75">
                        <h6 class="mt-4">Nome do produto</h6>
                        <p class="text-muted">Breve descrição</p>
                    </div>
                    <strong class="text-muted">R$12</strong>
                </li>                
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h5 class="my-0">Código promocional</h5>
                        <small>#PRIMEIROCAFEZINDODIA</small>
                    </div>
                    <span class="text-success">-R$0</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (BRL)</span>
                    <strong>R$20</strong>
                </li>
            </ul>

            <form class="card p-2">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Código promocional">
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-secondary">Resgatar</button>
                    </div>
                </div>
            </form>

            <a class="btn btn-success btn-lg mt-2" type="submit" asp-area="" asp-controller="Home" asp-action="Checkout">Continuar</a>
        </div>
    </div>
</div>


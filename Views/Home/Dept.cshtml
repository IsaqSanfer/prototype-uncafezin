<script>
    jQuery(document).on('click', '.btn', function () {        
        var productName = jQuery(this).closest(".card-body").find("h5.card-title").text();
        var productDescrip = jQuery(this).closest(".card-body").find("p:nth-child(2)").text();
        var productPrice = jQuery(this).closest('.card-body').find('p:nth-child(3)').text();

        var routeId = "01/" + productName + "/" + productDescrip + "/" + productPrice;
        var url = "@Url.Content("")"; 

        jQuery(this).attr('asp-route-id', url + routeId);
        
    });

    function btnComprar() {
        var title = jQuery("#title").val();
        var description = jQuery("#description").val();
        var price = jQuery("#price").val();

        jQuery("#title").val(title);
        jQuery("#description").val(description);
        jQuery("#price").val(price);

        jQuery("productForm").submit();
    }
</script>
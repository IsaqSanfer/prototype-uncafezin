@{
    ViewData["Title"] = "Prototype - Uncafezin";
}

<!-- Carrossel Home -->
<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div id="carouselHome" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselHome" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselHome" data-slide-to="1"></li>
                    <li data-target="#carouselHome" data-slide-to="2"></li>
                    <li data-target="#carouselHome" data-slide-to="3"></li>
                    <li data-target="#carouselHome" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/coffee-wall-lg.jpeg" alt="Slide 1" class="img-fluid carousel-image">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/alfajor-wall-lg.jpeg" alt="Slide 2" class="img-fluid carousel-image">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/croissant-wall-lg.jpeg" alt="Slide 3" class="img-fluid carousel-image">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/donuts-wall-lg.jpeg" alt="Slide 4" class="img-fluid carousel-image">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/granos-cafe-md.jpg" alt="Slide 5" class="img-fluid carousel-image" style="width:100%">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselHome" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselHome" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3" style="background-color: #A52A2A;">
        <a href="@Url.Action("Dept", "Home")#teaSection" class="bg-body shadow-sm m-3 p-4 text-decoration-none" style="width: 80%; height: 300px; border-radius: 21px;">
            <h2 class="display-5 text-white">Chás</h2>
            <p class="lead text-white">Não perca a nossa coleção tradicional de chás.</p>
        </a>
        <a href="@Url.Action("Dept", "Home")#alcoholSection" class="bg-body shadow-sm m-3 p-4 text-decoration-none" style="width: 80%; height: 300px; border-radius: 21px;">
            <h2 class="display-5 text-white">Alcóolicos</h2>
            <p class="lead text-white">Drinks deliciosos com café que você precisa conhecer!</p>
        </a>
        <a href="@Url.Action("Dept", "Home")#breadSection" class="bg-body shadow-sm m-3 p-4 text-decoration-none" style="width: 80%; height: 300px; border-radius: 21px;">
            <h2 class="display-5 text-white">Acompanhamentos</h2>
            <p class="lead text-white">Em breve pães, croissants e donuts para acompanhar um bom café!</p>
        </a>
    </div>

    <h2 class="bg-mychoco text-white rounded-bottom py-2 mt-4">&emsp; Destaques</h2><br />
    <div class="row d-flex justify-content-end py-2">
        <div class="col-sm"></div>
        <div class="col-sm">
            <div class="card shadow-lg" style="width: 18rem;">
                <img class="card-img-top img-fluid" src="~/itens/large_002.jpg" alt="Imagem de capa do card" height="200">
                <div class="card-body">
                    <h5 class="card-title">Espresso com Chantilly</h5>
                    <p class="card-text">Café puro e feito sob pressão com uma cobertura de chantilly.</p>
                    <br />
                    <p class="card-text">R$ 9,90</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Product" asp-route-id="02">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card shadow-lg" style="width: 18rem;">
                <img class="card-img-top img-fluid" src="~/itens/large_004.jpg" alt="Imagem de capa do card" height="200">
                <div class="card-body">
                    <h5 class="card-title">Cappuccino</h5>
                    <p class="card-text">Café espresso com leite vaporizado, resultando em um creme bem consistente.</p>
                    <p class="card-text">R$ 12,90</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Product" asp-route-id="04">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card shadow-lg" style="width: 18rem;">
                <img class="card-img-top img-fluid" src="~/itens/large_009.jpg" alt="Imagem de capa do card" height="200">
                <div class="card-body" style="height:230px;">
                    <h5 class="card-title">Chá verde com gengibre e limão</h5>
                    <p>&nbsp;</p>
                    <p class="card-text">R$ 7,90</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Product" asp-route-id="09">Comprar</a>
                </div>
            </div>
        </div>
    </div>   
</div>

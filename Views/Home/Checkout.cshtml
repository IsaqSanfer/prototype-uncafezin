@{
    ViewData["Title"] = "Entrega";
}

<style>
    .payment-info {
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease-in-out;
    }

        .payment-info.active {
            display: block;
            opacity: 1;
        }
</style>

<nav aria-label="breadcrumb mt-5">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Dept">Produtos</a></li>
        <li class="breadcrumb-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Basket">Carrinho</a></li>
        <li class="breadcrumb-item active"><a class="nav-link text-dark fw-bold" asp-controller="Home" asp-action="Checkout" aria-current="page">@ViewData["Title"]</a></li>
    </ol>
</nav>
<div class="py-5 text-center">
    <img class="d-block rounded-1 mx-auto mb-4" src="https://www.starbucks.com.br/public/img/rewards/icon-app-2.png" alt="" width="86" height="70">
    <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
    <p class="lead">Preencha com as suas informações de pagamento e entrega para finalizar o seu pedido.</p>
    <hr>
</div>

<main class="container">
    <div class="row">

        <div class="col-md-4 order-md-2 order-sm-1 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Seu carrinho</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Nome do produto</h6>
                        <small class="text-muted">Breve descrição</small>
                    </div>
                    <span class="text-muted">R$12</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Segundo produto</h6>
                        <small class="text-muted">Breve descrição</small>
                    </div>
                    <span class="text-muted">R$8</span>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Terceiro item</h6>
                        <small class="text-muted">Breve descrição</small>
                    </div>
                    <span class="text-muted">R$5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Código promocional</h6>
                        <small>#PRIMEIROCAFEZINDODIA</small>
                    </div>
                    <span class="text-success">-R$5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (BRL)</span>
                    <strong>R$20</strong>
                </li>
            </ul>
            <div class="mt-4">
                <button class="btn btn-success btn-lg btn-block w-100" type="submit" asp-controller="Home" asp-action="Order">Finalizar Compra</button>
            </div>
        </div>

        <div class="col-md-8 order-md-1 order-sm-2">

            <!-- <h4 class="mb-1">Seu Login</h4>
            <a class="nav-link mb-1" asp-area="" asp-controller="Account" asp-action="LoginPage">
                <span class="visually-hidden">Já possui uma conta? </span> Fazer login</a> -->

            <div class="mb-5">
                <h4 class="mb-3">Pagamento</h4>

                <div class="form-group">
                    <div class="custom-control custom-radio form-check-inline">
                        <input type="radio" id="radio-credito" name="pagamento" value="credito" class="custom-control-input" onchange="mostrarDiv('div-credito')">
                        <label class="custom-control-label" for="radio-credito">Crédito</label>
                    </div>
                    <div class="custom-control custom-radio form-check-inline">
                        <input type="radio" id="radio-debito" name="pagamento" value="debito" class="custom-control-input" onchange="mostrarDiv('div-debito')">
                        <label class="custom-control-label" for="radio-debito">Débito</label>
                    </div>
                    <div class="custom-control custom-radio form-check-inline">
                        <input type="radio" id="radio-pix" name="pagamento" value="pix" class="custom-control-input" onchange="mostrarDiv('div-pix')">
                        <label class="custom-control-label" for="radio-pix">Pix</label>
                    </div>
                </div>

                <div id="div-credito" class="payment-info">
                    <h3>Cartão de Crédito</h3>
                    <!-- Adicione os campos do formulário para as informações de cartão de crédito aqui -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-nome">Nome do Titular do cartão</label>
                            <input type="text" class="form-control" id="cc-nome" placeholder="" required="">
                            <small class="text-muted">Nome completo, como mostrado no cartão.</small>
                            <div class="invalid-feedback">
                                O nome que está no cartão é obrigatório.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-numero">Número do cartão de crédito</label>
                            <input type="text" class="form-control" id="cc-numero" placeholder="" required="">
                            <div class="invalid-feedback">
                                O número do cartão de crédito é obrigatório.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiracao">Data de expiração</label>
                            <input type="text" class="form-control" id="cc-expiracao" placeholder="" required="">
                            <div class="invalid-feedback">
                                Data de expiração é obrigatória.
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-cvv">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                            <div class="invalid-feedback">
                                Código de segurança é obrigatório.
                            </div>
                        </div>
                    </div>
                </div>

                <div id="div-debito" class="payment-info">
                    <h3>Cartão de Débito</h3>
                    <!-- Adicione os campos do formulário para as informações de cartão de débito aqui -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-nome">Nome do Titular do cartão</label>
                            <input type="text" class="form-control" id="cc-nome" placeholder="" required="">
                            <small class="text-muted">Nome completo, como mostrado no cartão.</small>
                            <div class="invalid-feedback">
                                O nome que está no cartão é obrigatório.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cc-numero">Número do cartão de crédito</label>
                            <input type="text" class="form-control" id="cc-numero" placeholder="" required="">
                            <div class="invalid-feedback">
                                O número do cartão de crédito é obrigatório.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label for="cc-expiracao">Data de expiração</label>
                            <input type="text" class="form-control" id="cc-expiracao" placeholder="" required="">
                            <div class="invalid-feedback">
                                Data de expiração é obrigatória.
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="cc-cvv">CVV</label>
                            <input type="text" class="form-control" id="cc-cvv" placeholder="" required="">
                            <div class="invalid-feedback">
                                Código de segurança é obrigatório.
                            </div>
                        </div>
                    </div>
                </div>

                <div id="div-pix" class="payment-info">
                    <h3>Pagamento via Pix</h3>
                    <!-- Adicione os campos do formulário para as informações de pagamento via Pix aqui -->
                </div>
                                
                <div class="container my-3 p-4 bg-mygris shadow-lg">

                    <h4>Endereço de Entrega</h4>
                    <form class="needs-validation was-validated" novalidate="">
                        <div class="row">

                            <div class="col-md-5 mb-3">
                                <label for="primeiroNome">Nome</label>
                                <input type="text" class="form-control" id="primeiroNome" placeholder="" value="" required="">
                                <div class="invalid-feedback">É obrigatório inserir um nome válido.</div>
                            </div>
                            <div class="col-md-7 mb-3">
                                <label for="sobrenome">Sobrenome</label>
                                <input type="text" class="form-control" id="sobrenome" placeholder="" value="" required="">
                                <div class="invalid-feedback">É obrigatório inserir um sobre nome válido.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="cep">CEP</label>
                                <input type="text" class="form-control" id="cep" placeholder="" required="">
                                <div class="invalid-feedback">É obrigatório inserir um CEP.</div>
                            </div>
                            <div class="col-md-9 mb-3">
                                <label for="endereco">Endereço</label>
                                <input type="text" class="form-control" id="endereco" placeholder="" required="">
                                <div class="invalid-feedback">Por favor, insira seu endereço de entrega.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="numero">Número</label>
                                <input type="text" class="form-control" id="numero" placeholder="" required="">
                                <div class="invalid-feedback">Por favor, insira um número.</div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="complemento">Complemento<span class="text-muted">(Opcional)</span></label>
                                <input type="text" class="form-control" id="complemento" placeholder="">
                            </div>

                            <div class="col-md-5 mb-3">
                                <label for="bairro">Bairro</label>
                                <input type="text" class="form-control" id="bairro" placeholder="" required="">
                                <div class="invalid-feedback">Por favor, insira um bairro válido.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-5 mb-3">
                                <label for="cidade">Cidade</label>
                                <input type="text" class="form-control" id="cidade" placeholder="" required="">
                                <div class="invalid-feedback">Por favor, escolha uma cidade válida.</div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="estado">Estado</label>
                                <input type="text" class="form-control" id="estado" placeholder="" required="">
                                <div class="invalid-feedback">Por favor, insira um estado válido.</div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<script src="../../assets/js/vendor/holder.min.js"></script>
<script>
    (function () {
        'use strict';

        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

    function mostrarDiv(divId) {
        jQuery('.payment-info').removeClass('active');
        jQuery('#' + divId).addClass('active');
    }
</script>